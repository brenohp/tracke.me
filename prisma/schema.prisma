generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// Define uma "enumeração" para os tipos de função do usuário.
// Isso garante que um usuário só possa ter um desses papéis.
enum Role {
  ADMIN // Administrador do sistema (pode ser você ou um funcionário da InovaRiber)
  OWNER // O dono do negócio (ex: dono do salão, da barbearia)
  EMPLOYEE // Funcionario (ex: cabeleireiro, recepcionista, manicuri)
}

// Define o modelo para a tabela de Usuários
model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(OWNER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // --- Nova linha para o relacionamento ---
  // Um usuário pode ter uma lista de muitos serviços.
  services  Service[]
  clients Client[]
  appointments Appointment[]
}

// Define o modelo para a tabela de Serviços
model Service {
  id          String   @id @default(cuid())
  name        String   // Ex: "Corte Masculino", "Manicure e Pedicure"
  description String?  // O '?' indica que este campo é opcional
  price       Decimal  // Usamos Decimal para valores monetários para evitar erros de precisão
  duration    Int      // Duração do serviço em minutos (ex: 30, 45, 60)

  // --- Relacionamento com o Usuário ---
  // Este serviço pertence a um usuário específico.
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments Appointment[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Define o modelo para a tabela de Clientes dos usuários
model Client {
  id    String  @id @default(cuid())
  name  String
  phone String? // Telefone de contato, opcional
  email String? // Email do cliente, opcional

  // Relacionamento: Este cliente pertence a um usuário (profissional/dono)
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments Appointment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Enum para os possíveis status de um agendamento
enum AppointmentStatus {
  SCHEDULED // Agendado
  COMPLETED // Concluído
  CANCELED  // Cancelado pelo cliente ou profissional
  NO_SHOW   // O cliente não compareceu
}

// Define o modelo para a tabela de Agendamentos
model Appointment {
  id        String   @id @default(cuid())
  startTime DateTime // Data e hora de início do agendamento
  endTime   DateTime
  status    AppointmentStatus @default(SCHEDULED)

  // --- Relacionamentos ---
  // Um agendamento pertence a um cliente
  clientId String
  client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  // Um agendamento é para um serviço específico
  serviceId String
  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  // Um agendamento é realizado por um profissional (usuário)
  professionalId String
  professional   User    @relation(fields: [professionalId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}